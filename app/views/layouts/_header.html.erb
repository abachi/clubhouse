<div class="w-full flex justify-between items-center px-12 py-2 border-b">
  <a href="<%= root_url %>" class="w-1/4 logo flex items-center">
    <%= image_tag 'logo.png', :alt => 'Logo', :class => 'w-16, h-16' %>
    <h1 class="text-lg">Clubhouse</h1>
  </a>
  <ul class="flex">
    <% if logged_in? %>
    <li class="mx-2"><%= link_to 'New Post',    new_post_path, :class => 'text-red-800 font-medium hover:underline' %></li>
    <li class="mx-2"><%= link_to 'Posts',    posts_path, :class => 'text-red-800 font-medium hover:underline' %></li>
    <li class="mx-2"><%= link_to 'Logout',    logout_path, method: :delete, :class => 'text-red-800 font-medium hover:underline' %></li>
    <%else%>
    <li class="mx-2"><%= link_to 'Login',    login_path, :class => 'text-red-800 font-medium hover:underline' %></li>
    <li class="mx-2"><%= link_to 'Register', register_path, :class => 'text-red-800 font-medium hover:underline' %></li>
    <%end%>
  </ul>
</div>