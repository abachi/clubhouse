
<div class="flex items-center mx-4 mb-12">
  <h1 class="text-xl">Welcome To The Clubhouse | Login</h1>
</div>
<%= form_for(:session, url: login_path) do |f| %>
  <% if not flash.empty? %>
    <div class="mx-4">
      <p class="font-semibold text-red-500"><%= flash[:error] %></p>
    </div>
  <%end%>
<div class="flex flex-col outline">
  <div class="flex my-2 mx-4">
    <%= f.label :email, class: 'w-1/6' %>
    <%= f.email_field :email, class: 'w-1/2 border rounded' %>
  </div>

  <div class="flex my-2 mx-4">
    <%= f.label :password, class: 'w-1/6' %>
    <%= f.password_field :password, class: 'w-1/2 border rounded' %>
  </div>

  <div class="flex my-2 mx-4">
    <%= f.submit "Login", :class => 'px-4 py-1 cursor-pointer rounded bg-blue-500 text-white'  %>
  </div>
</div>
<%end%>
